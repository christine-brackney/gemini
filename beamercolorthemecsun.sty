\definecolor{csunAccessibleRed}{RGB}{173, 0, 29}

% -- Most of these are too dark for backgrounds but we can mix in white to get good background colors.
\colorlet{lightAlertBG}{csunLibaryBeige!50} % this is 50% LibaryBeige 50% white
\colorlet{lightExampleBG}{csunAzure!10} % this is 10% Azure 90% white

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=csunAccessibleRed}

% Headline
\setbeamercolor{headline}{fg=white,bg=csunHeroRed}
\setbeamercolor{headline rule}{bg=csunSecRed}

% Block
\setbeamercolor{block title}{fg=csunAccessibleRed,bg=white}
\setbeamercolor{block separator}{bg=csunTerBurgundy}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=csunAccessibleRed,bg=lightAlertBG}
\setbeamercolor{block alerted separator}{bg=csunTerBurgundy}
\setbeamercolor{block alerted body}{fg=black,bg=lightAlertBG}

% Example Block
\setbeamercolor{block example title}{fg=csunAccessibleRed,bg=lightExampleBG}
\setbeamercolor{block example separator}{bg=csunTerBurgundy}
\setbeamercolor{block example body}{fg=black,bg=lightExampleBG}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=csunAccessibleRed}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
\setbeamertemplate{bibliography entry article}{}
\setbeamertemplate{bibliography entry title}{}
\setbeamertemplate{bibliography entry location}{}
\setbeamertemplate{bibliography entry note}{}
